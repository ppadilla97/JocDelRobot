<Window x:Class="JocRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JocRobot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="30">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Numero de files"/>
            <TextBox x:Name="tbFiles"/>
            <TextBlock Text="Numero de columnes"/>
            <TextBox x:Name="tbColumnes"/>
            <Button x:Name="btnCreaTauler" Content="Juga" Margin="10" Click="btnCreaTauler_Click"/>
        </StackPanel>
        
    </Grid>
</Window>

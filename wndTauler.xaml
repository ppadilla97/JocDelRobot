<Window x:Class="JocRobot.wndTauler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JocRobot"
        mc:Ignorable="d"
        Title="wndTauler" Height="450" Width="800"
        Loaded="Window_Loaded" KeyDown="grdGraella_KeyDown">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="tbMoviments" Text="Número de moviments -> "/>
        </StatusBar>
        <Grid x:Name="grdGraella"/>
    </DockPanel>
</Window>
